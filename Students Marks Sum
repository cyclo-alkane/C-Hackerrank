//Students Marks Sum
int marks_summation (int *marks,int number_of_students,char gender)
{
    int n,i,sum=0;
    char c;
    n=number_of_students;
    c=gender;
  if(c == 'b') {
    for (i = 0; i < n; i = i + 2) {
      sum = sum +*(marks+i);
    }
     return (sum);
    
    // printf("%d\n",sum);
  }
  else {
    for (i = 1; i < n; i = i + 2) {
      sum = sum +*(marks+i);
    }  
       return (sum);
   

    // printf("%d\n",sum);
  }
}

